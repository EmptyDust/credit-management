{
  "build_config": {
    "global_settings": {
      "buildkit": true,
      "parallel_builds": false,
      "memory_limit": "6g",
      "cpu_limit": "4.0",
      "timeout": "1800"
    },
    "services": {
      "api-gateway": {
        "context": "./api-gateway",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "user-management-service": {
        "context": "./user-management-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "auth-service": {
        "context": "./auth-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "application-management-service": {
        "context": "./application-management-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "6g",
        "cpu_limit": "4.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "affair-management-service": {
        "context": "./affair-management-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "student-info-service": {
        "context": "./student-info-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "teacher-info-service": {
        "context": "./teacher-info-service",
        "dockerfile": "Dockerfile",
        "memory_limit": "4g",
        "cpu_limit": "3.0",
        "build_args": {
          "GO_VERSION": "1.24.4",
          "CGO_ENABLED": "0"
        }
      },
      "frontend": {
        "context": "./frontend",
        "dockerfile": "Dockerfile",
        "memory_limit": "3g",
        "cpu_limit": "2.0",
        "build_args": {
          "NODE_VERSION": "18-alpine"
        }
      }
    }
  },
  "runtime_config": {
    "postgres": {
      "memory_limit": "4G",
      "cpu_limit": "4.0",
      "memory_reservation": "2G",
      "cpu_reservation": "2.0"
    },
    "api-gateway": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "user-management-service": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "auth-service": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "application-management-service": {
      "memory_limit": "4G",
      "cpu_limit": "3.0",
      "memory_reservation": "2G",
      "cpu_reservation": "1.5"
    },
    "affair-management-service": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "student-info-service": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "teacher-info-service": {
      "memory_limit": "2G",
      "cpu_limit": "2.0",
      "memory_reservation": "1G",
      "cpu_reservation": "1.0"
    },
    "frontend": {
      "memory_limit": "1G",
      "cpu_limit": "1.0",
      "memory_reservation": "512M",
      "cpu_reservation": "0.5"
    }
  }
} 